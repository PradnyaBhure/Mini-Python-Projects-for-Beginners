
import random

print("Welcome to the Dice Rolling Simulator!")

while True:
    input("Press Enter to roll the dice...")
    
    result = random.randint(1, 6)
    
    print("You rolled: ", result)
    
    play_again = input("Do you want to roll again? (yes/no): ")
    
    if play_again.lower() != 'yes':
        print("Goodbye!")
        break

